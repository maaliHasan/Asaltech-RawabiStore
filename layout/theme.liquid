	function addToCartOk(product) { 
   		cartCount++; 
        $("#cartcount").text(cartCount);
      	$("#cartcounter").text(cartCount);
        openModal();
	}
     function addToCartFail(obj, status) { 
     	//$('.modal').html('<span class="close" id="close">âœ•</span> The product you are trying to add is out of stock.'); 
  	 	openModal();
        alert("fail");
 	} 
    
    function centerModal(){
   		var modal = $('.modal.open');
   		var mWidth = modal.outerWidth()
   		var mHeight = modal.outerHeight();
   		var width = $(window).width();
   		var height = $(window).height();
   			if((width % 1) != 0){
      			width = Math.round(width)
    	}
   		if((height % 1) != 0){
      		height = Math.round(height)
  	 	}
   		var topPos = (height / 2) - (mHeight / 2);
   		var leftPos = (width / 2) - (mWidth / 2);
   		modal.css({top: topPos, left:leftPos})

 }

	//open modal and overlay
	function openModal(){
   		$('.modal').removeClass('hidden').addClass('open');
   		$('.modal--overlay').removeClass('hidden').addClass('open');
   		$('body').css('overflow', 'hidden');
   		centerModal();
	}

	//close modal and overlay
	function closeModal(){
   		$('.modal.open').addClass('hidden').removeClass('open');
        $('.modal--overlay').addClass('hidden').removeClass('open');
   		$('body').css('overflow', 'auto');
	}
   
   
